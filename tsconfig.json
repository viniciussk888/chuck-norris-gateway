{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "jest.config.js",
    "node_modules",
    "**/test/**",
    "dist",
    "**/*spec.ts",
    "**/*.test.ts"
  ]
}
