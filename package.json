{
  "name": "chuck-norris-gateway",
  "private": true,
  "version": "1.0.0",
  "description": "Micro serviço para integração com API do Chuck Norris",
  "main": "./src/index.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint --fix . --ext .js,.jsx,.ts,.tsx",
    "patch": "npm version patch -m \"release: version %s\" && git push --tags && git push",
    "postversion": "bash ./scripts.sh sonar",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug=0.0.0.0 --watch",
    "test": "NODE_ENV=test jest --detectOpenHandles --forceExit --coverage --silent"
  },
  "os": [
    "darwin",
    "linux",
    "!win32"
  ],
  "engines": {
    "node": "20",
    "npm": "10"
  },
  "keywords": [
    "scafflater",
    "templater",
    "scaffold"
  ],
  "author": "Alberto Rocha",
  "license": "MIT",
  "dependencies": {
    "@nestjs/axios": "^3.0.2",
    "@nestjs/class-transformer": "^0.4.0",
    "@nestjs/class-validator": "^0.13.4",
    "@nestjs/common": "^10.3.8",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.3.8",
    "@nestjs/platform-express": "^10.3.8",
    "@nestjs/platform-fastify": "10.3.8",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/terminus": "^10.2.3",
    "axios": "^1.7.2",
    "class-validator": "^0.14.1",
    "nest-winston": "^1.10.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@fastify/static": "^7.0.4",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.8",
    "@tsconfig/node20": "20.1.4",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.0",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.3.0",
    "sinon": "^17.0.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  }
}
